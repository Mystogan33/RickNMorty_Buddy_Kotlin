<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_fragment_item_id"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    cardView:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2d2d2d">

        <ImageView
            android:id="@+id/episode_fragment_item__img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="#2d2d2d"
            android:transitionName="imageEpisode"/>

        <TextView
            android:id="@+id/episode_fragment_item_name"
            android:textSize="12sp"
            android:transitionName="nameEpisode"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un episode de fou qui commence bien"/>

        <TextView
            android:id="@+id/episode_fragment_item_season"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="S01EP01"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>