<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_fragment_item_cardview"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    cardView:cardCornerRadius="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#2d2d2d">

        <ImageView
            android:id="@+id/location_fragment_item__img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="imageLocation"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/location_fragment_item_name"
                android:layout_width="match_parent"
                android:textColor="@color/colorValidate"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Name of Planet"
                android:fontFamily="@font/rick_n_morty"
                android:textSize="22sp"
                android:textStyle="bold"
                android:transitionName="nameLocation"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/locations_fragment_item_type"
                    android:fontFamily="@font/rick_n_morty"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/location_fragment_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Planet Type"
                    android:fontFamily="@font/calligraph_regular"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:transitionName="typeLocation"
                    android:textColor="@color/colorValidate"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/locations_fragment_item_dimension"
                    android:textStyle="bold"
                    android:fontFamily="@font/rick_n_morty"
                    android:textSize="22sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/location_fragment_item_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dimension C-137"
                    android:fontFamily="@font/calligraph_regular"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:transitionName="dimensionLocation"
                    android:textColor="@color/colorValidate"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>