<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mysto.ricknmortybuddykotlin">

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainActivity.MainActivity"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".episodeDetails.EpisodeDetailsActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".locationDetails.LocationDetailsActivity"
            android:configChanges="orientation|keyboardHidden" />

        <activity
            android:name=".characterDetails.CharacterDetailsActivity"
            android:configChanges="orientation|keyboardHidden" />

    </application>


</manifest>